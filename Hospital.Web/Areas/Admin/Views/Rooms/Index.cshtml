@using Hospital.Utilities
@model PagedResult<Hospital.ViewModels.RoomViewModel>

@{
    ViewData["Title"] = "Rooms List";
}

<div class="container mt-4">
    <h1 class="mb-4">Rooms</h1>
    <p>
        <a class="btn btn-primary" asp-action="Create">Add a Room</a>
    </p>
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Room Number</th>
                <th>Type</th>
                <th>Status</th>
                <th>Hospital Info</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Data)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                    <td>@Html.DisplayFor(modelItem => item.RoomNumber)</td>
                    <td>@Html.DisplayFor(modelItem => item.Type)</td>
                    <td>@Html.DisplayFor(modelItem => item.Status)</td>
                    <td>@Html.DisplayFor(modelItem => item.HospitalInfo.Name)</td>
                    <td>
                        <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.Id">Details</a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="d-flex justify-content-center mt-4">
        <cs-pager cs-paging-pagesize="@(int)Model.PageSize"
                  cs-paging-pagenumber="@(int)Model.PageNumber"
                  cs-paging-totalitems="@(int)Model.TotalItems"
                  cs-pagenumber-param="pageNumber"
                  asp-controller="Rooms"
                  asp-action="Index"
                  cs-pager-li-current-class="page-item active"
                  cs-pager-li-other-class="page-item"
                  cs-pager-li-non-active-class="page-item disabled"
                  cs-pager-link-current-class="page-link"
                  cs-pager-link-other-class="page-link">
        </cs-pager>
    </div>
</div>

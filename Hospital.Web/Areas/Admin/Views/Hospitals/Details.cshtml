@model Hospital.ViewModels.HospitalInfoViewModel

@{
    ViewData["Title"] = "Hospital Details";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h2>Hospital Details</h2>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Hospital ID</dt>
                        <dd class="col-sm-8">
                            <p class="form-control-plaintext">@Html.DisplayFor(model => model.Id)</p>
                        </dd>

                        <dt class="col-sm-4">Hospital Name</dt>
                        <dd class="col-sm-8">
                            <p class="form-control-plaintext">@Html.DisplayFor(model => model.Name)</p>
                        </dd>

                        <dt class="col-sm-4">Hospital Type</dt>
                        <dd class="col-sm-8">
                            <p class="form-control-plaintext">@Html.DisplayFor(model => model.Type)</p>
                        </dd>

                        <dt class="col-sm-4">City</dt>
                        <dd class="col-sm-8">
                            <p class="form-control-plaintext">@Html.DisplayFor(model => model.City)</p>
                        </dd>

                        <dt class="col-sm-4">Pin Code</dt>
                        <dd class="col-sm-8">
                            <p class="form-control-plaintext">@Html.DisplayFor(model => model.PinCode)</p>
                        </dd>

                        <dt class="col-sm-4">Country</dt>
                        <dd class="col-sm-8">
                            <p class="form-control-plaintext">@Html.DisplayFor(model => model.Country)</p>
                        </dd>
                    </dl>
                </div>
                <div class="text-center">
                    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-outline-primary" })
                    <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
